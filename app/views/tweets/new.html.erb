<h1>Schedule a Tweet</h1>

<%= form_with model: @tweet, local: true, data: { turbo: false } do |form| %>
    <%= render "shared/form-errors", form: form %>

    <div class="mb-3">
        <%= form.label :twitter_account_id %>
        <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :username, {},{ class: "form-control mb-2" } %>
        <%= link_to "Connect a Twitter account", "/auth/twitter", method: :post, data: { turbo: "false" } %>  
    </div>

    <div class="mb-3">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :publish_at %>
        <div class="form-control">
            <%= form.datetime_select :publish_at %>
        </div>
    </div>

    <%= form.button "Schedule", class: "btn btn-primary" %>
<% end %>