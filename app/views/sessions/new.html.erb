<h1>Sign in</h1>

<%= form_with url: sign_in_path, local: true, data: { turbo: false } do |form| %>
    <div class="mb-3">
        <%= form.label :email, class: "form-label"%>
        <%= form.text_field :email, class: "form-control", placeholder: "chris@gmail.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :password, class: "form-label"%>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign in", class: "btn btn-primary" %>
    </div>
<% end %>